pipeline {
    agent {
        docker {
            image 'postman/newman'
            args "--entrypoint=''"
        }
    }
    
    stages {
        stage('verifier la version de newman') {
            steps {
                sh 'newman --version'
            }
        }

        stage('test API') {
            steps {
        sh 'newman run collections/Collection1.postman_collection.json -r html --reporter-html-export reports/report.html'
           
            }
        }
    }
}
